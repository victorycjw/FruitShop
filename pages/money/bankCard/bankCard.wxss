/* pages/money/bankCard/bankCard.wxss */
@import "/utils/style/flexstyle.wxss";

page{
  background: #f5f5f5;
  font-size: 28rpx;
}
.item30{
  padding: 30rpx
}
.top{
  padding: 30rpx;
  margin-top: 20rpx;
}
.bank_item{
  width: 690rpx;
  margin: 30rpx;

}
.item_top{
  background: linear-gradient(to right,rgba(255,0,42,0.8),rgba(254,19,146,0.8));
  height: 180rpx;
  padding: 0 30rpx;
  color: #fff;

}
.item_bottom{
  padding: 30rpx
}
.item_bottom view{
  text-align: center;
}
.item_bottom :first-child{
  border-right: 1rpx solid #eee
}


/* 模态框样式 */
.ModalStyle{
  background:white;
  width:690rpx;
  margin:0 auto;
  position:absolute;
  top:28%;
  left:30rpx;
  padding:40rpx 0rpx;
  border-radius:8rpx;
  z-index:1001;

}
.Modal_title{
  text-align: center;
  padding-bottom: 30rpx;
  border-bottom: 1rpx solid #f5f5f5;
  position: relative
}
.Modal_title image{
  width: 33rpx;
  height: 32rpx;
  position: absolute;
  right: 30rpx;
  top: 0
}
.ModalStyle button{
  width: 630rpx;
  background: #f23030;
  color: #fff;
  line-height: 1;
  border-radius: 44rpx;
  padding: 30rpx
}
.pro_right{
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.pro_right_bot{
  display: flex;
  justify-content: space-between;
}
.Modal_item{
  padding: 30rpx;
  display: flex;
  justify-content: space-between
}
.end{
  text-align: right
}
.border_r{
  border-right: 1rpx solid #f5f5f5
}
.line{
  width: 1rpx;
  height: 70rpx;
  background: #f5f5f5
}