/* pages/product/productData/productData.wxss */
@import "/utils/style/flexstyle.wxss";
@import "/utils/xmls/maskLayer/maskLayer.wxss";

page{
  background: #f5f5f5;
  height: 100%;
  font-size: 26rpx
}

.top_img image{
  width:100%;
  height: 480rpx;
  background: #f5f5f5
}
.pro_title{
  padding: 20rpx 30rpx 30rpx
}
.pro_title_price{
  font-size:21px;
}
.ysItmes{
  background: #f5f5f5;
  padding: 30rpx
}
.ysItmes image{
  width: 24rpx;
  margin-right: 20rpx
}

.swiperItem{
  padding: 36rpx;
}
.bd_r{
  border-bottom: 4rpx solid #f23030
}

/* 底部按钮栏 */
.bottomItem{
  width: 100%;
  position: fixed;
  bottom: 0;
  left: 0;
  height: 96rpx;
}
.endButton view{
  width: 240rpx;
  color: #fff;
  height: 96rpx;
  text-align: center;
}
.bg_o{
  background: #ffa200
}
.bg_r{
  background: #f23030
}
.shop{
  background:linear-gradient(to top,#c39f70 0%,#e3c68e 100%);
}
.acc{
  display:flex;
  flex-direction:column;
  justify-content:center;
}


/* 规格选择弹出框 */
.specclass {
  width: 100%;
  background: #fff;
  border-top: 1rpx solid #ededed;
  position: fixed;
  bottom: 0;
  z-index: 2000;
}

.specclass_title {
  height: 112rpx;
  border-bottom: 1rpx solid #ededed;
}

.cancel {
  position: absolute;
  top: 40rpx;
  right: 30rpx;
}
.item30{
  padding: 30rpx
}
.specProRight{
  height: 150rpx
}
.specclassImg{
  width: 150rpx;
  height: 150rpx
}

.payclass_btn {
  width: 100%;
  background: #f23030;
  margin-top: 20rpx;
  color: #fff
}

/* 数量选择器 */
.muns{
  display: flex;
}
.minus{
  border: 1rpx solid #999;
  border-right: none;
  padding: 0 15rpx;
  display: flex;
  align-items: center
}
.num{
  border: 1rpx solid #999;
  width: 60rpx;
  padding: 1rpx;
  text-align: center;
}
.add{
  border: 1rpx solid #999;
  border-left: none;
  padding: 0 15rpx;
    display: flex;
  align-items: center
}

.swiper2{
  margin-bottom:100rpx;
  min-height: 88%;
  overflow-wrap:normal; 
}
.swiper2 swiper-item{
  background: white;
  overflow-wrap:normal; 
  overflow: auto;
}
swiper-item>view{
  background: white;
}

.specList{
  flex-wrap: wrap;
}
.size{
  font-size: 24rpx;
  text-align: center;
  padding: 10rpx 20rpx;
  display: inline-block;
  margin: 20rpx 0rpx 0 30rpx;
  border-radius: 10rpx;
}
.check{
  background: #f23030;
  color: #fff;
}
.nocheck{
  color: #666;
  background: #ededed; 
}
.item20{
  padding: 20rpx 30rpx
}
.peopleimg{
  width:80rpx;
  height:80rpx;
  border-radius: 50%;
}

.commentPics{
  flex-wrap: wrap
}
.swiper1{
  width: 750rpx;
  height: 394rpx;
  background: #f5f5f5
}
.swiper1 image{
  width: 750rpx;
  height: 394rpx;
}