/* pages/shoppingSure/shoppingSure.wxss */
@import "/utils/style/flexstyle.wxss";
@import "/utils/xmls/maskLayer/maskLayer.wxss";

page{
  background: #f5f5f5;
  height: 100%;
}
.item{
  padding: 30rpx;
}
.item20{
  padding: 20rpx 30rpx
}
.leftimg{
  width: 180rpx;
  height: 180rpx
}
.proRight{
  width: 480rpx;
  height: 180rpx

}

/* 底部按钮区 */
.final{
  height: 88rpx;
  width: 100%;
  position: fixed;
  bottom: 0;
  left: 0;
  background: #fff;
}
.buttons button{
  width: 240rpx;
  height: 88rpx;
  color: #fff;
  border-radius: 0
}

.bg_r{
  background: #f23030
}
.c_rr{
  color:#f23030;
  font-size:18px;
}
.books{
  width:240rpx;
  height:95rpx;
  display:flex;
  flex-direction:column;
  justify-content:center;
  align-items:center;
}
.books_r, .books_s{
  display:inline;
  color:#fff;
}
.books_r{
  font-size:16px;
}
.books_s{
  font-size:12px;
}


/* 支付方式弹出框 */
.payclass {
  width: 100%;
  height: 660rpx;
  background: #fff;
  border-top: 1rpx solid #ededed;
  position: fixed;
  bottom: 0;
  z-index: 2000;
}

.payclass_title {
  height: 112rpx;
  border-bottom: 1rpx solid #ededed;
}

.payclass_item {
  height: 112rpx;
  border-bottom: 1rpx solid #ededed;
  padding: 0 30rpx;
}

.payclass_btn {
  width: 660rpx;
  margin-top: 60rpx;
  background: #f23030;
  color: #fff
}

.cancel {
  position: absolute;
  top: 40rpx;
  right: 30rpx;
}

.bf5{
  background: #f5f5f5
}
