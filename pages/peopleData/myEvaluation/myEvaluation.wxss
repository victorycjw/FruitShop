/* pages/peopleData/myEvaluation/myEvaluation.wxss */
@import "/utils/style/flexstyle.wxss";
@import "/utils/xmls/noneDataStyle/noneDataStyle.wxss";
page{
  font-size: 26rpx;
  background: #f5f5f5;
}
.head{
  padding: 20rpx 30rpx;
  background: #fff
}
.head image{
  border-radius: 50%;
  width: 80rpx;
}
.head button{
  width: 160rpx;
  height: 60rpx;
  border-radius: 30rpx;
  border: 1rpx solid #f23030;
  background: #fff;
  line-height: 1;
  padding: 18rpx
}

/* 评论列表 */
.eva_list{
  padding: 20rpx 30rpx;
  background: #fff
}
.headImg{
  width: 64rpx;
  border-radius: 50%;
  margin-right: 30rpx
}


/* 评论图片 */
.evaImgs{
  flex-wrap: wrap;
}
.evaImgs image{
  width: 220rpx;
  height: 220rpx;
  margin: 0 5rpx;
}

/* 商品详情 */
.proitem{
  background: #f5f5f5;
}
.proitem image{
  width: 96rpx;
  height: 96rpx;
  margin-right: 30rpx
}