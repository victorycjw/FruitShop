/* pages/peopleData/order/order.wxss */
@import "/utils/xmls/noneDataStyle/noneDataStyle.wxss";
@import "/utils/style/flexstyle.wxss";
@import "/utils/xmls/maskLayer/maskLayer.wxss";
page{
  height: 100%;
  background: #f5f5f5
}
.bw{
  background: #fff
}
 
.titleTop{
  padding: 30rpx 20rpx
}
.titlecolor{
  color: #f23030;
  border-bottom: 4rpx solid #f23030
}
.orders{
  padding: 30rpx 30rpx 0 30rpx;
}
.orders .fe{
  padding:20rpx 0;
}
.pros{
  padding: 20rpx 0
}
.pros image{
  width: 180rpx;
  height: 180rpx;
}
swiper-item{
  overflow: auto;
}
.prosRight{
  height: 180rpx;
  width: 480rpx
}

.buts view{
  padding: 10rpx 18rpx;
  line-height: 1;
  border: 1rpx solid #666;
  border-radius: 24rpx;
  margin-left: 20rpx
}




/* 支付方式弹出框 */
.payclass {
  width: 100%;
  height: 660rpx;
  background: #fff;
  border-top: 1rpx solid #ededed;
  position: fixed;
  bottom: 0;
  z-index: 2000;
}

.payclass_title {
  height: 112rpx;
  border-bottom: 1rpx solid #ededed;
}

.payclass_item {
  height: 112rpx;
  border-bottom: 1rpx solid #ededed;
  padding: 0 30rpx;
}

.payclass_btn {
  width: 660rpx;
  margin-top: 60rpx;
  background: #f23030;
  color: #fff
}

.cancel {
  position: absolute;
  top: 40rpx;
  right: 30rpx;
}

.refundclass {
  width: 690rpx;
  /* height: 360rpx; */
  background: #fff;
  border-top: 1rpx solid #ededed;
  position: fixed;
  bottom: 40%;
  left: 30rpx;
  z-index: 2000;
}
.refundclass input{
  margin: 30rpx auto;
  padding: 0 30rpx;
}


.submitBut{
  width: 540rpx;
  background: #f23030;
  color: #fff;
  margin-bottom: 60rpx
}



.fe .back{
  background:#f1312f;
  border:1px solid transparent;
  color:#fff;
}
swiper .flex_end, .fe{
  justify-content: flex-end;
}
.fe .left{
  border:0;
  margin-left:0;
  padding-left:0;
}
.orders .fe .right .one{
  display: flex;
  justify-content: flex-end;
  width:68%;
  border:0;
  padding-right:0;
  padding-left:0;
  margin-left:0;
}
.orders .fe .right view{
  padding:8rpx 10rpx;
}
.orders .fe .right .one view:first-child{
  margin-left:0;
}
.orders .left1{
  border:0;
  display:flex;
  align-items: center;
  margin-left:0;
  padding-left:0;
}
.orders .left1 view{
  border:0;
  margin-left:10rpx;
  padding-left:0;
}
.orders .left1 view text{
  color:#f1312f;
  margin-left:10rpx;
  font-size:20rpx;
}
.orders .left1 image{
  width:40rpx;
  height:40rpx;
  
}
.orders .left view{
  border:0;
  padding:0;
}
.orders .left2{
  margin-left:0;
  padding-left:0;
  position: relative;
}
.orders .left2 .lefttitle{
  width:50rpx;
  height:26rpx;
  background:#f1312f;
  color:#fff;
  font-size:19rpx;
  text-align: center;
  line-height:26rpx;
  position:absolute;
  top:0;
  left:-17rpx;
}
.leftimg view{
  display:flex;
  align-items: center;
}
.leftimg view image{
  width:90rpx;
  height:90rpx;
  margin-right:10rpx;
}
.orders .leftimg{
  display: flex;
  margin-left:0;
  padding-left:0;
}
.orders .leftimg view:first-child{
  margin-left:0;
  padding-left:0;
}
.orders .leftimg view:last-child{
  margin-left:0;
  padding-left:0;
  color:#f1312f;
}
.left2 .leftimg .img1{
  width:41rpx;
  height:22rpx;
  position: absolute;
  top:33rpx;
  left:74rpx;
}


.bottomicon{
  display: flex;
  margin:0rpx auto 20rpx;
  width:40%;
}
.bottomicon view{
  color:#999;
}
.bottomicon image{
  width:40rpx;
  height:40rpx;
  margin:0 15rpx;
}

 ::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

::-webkit-scrollbar {
     display: none;
}