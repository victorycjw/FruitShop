/* pages/people/people.wxss */
@import "/utils/style/flexstyle.wxss";

page{
  height: 100%;
  background: #f5f5f5;
  font-size: 26rpx
}
.mytop {
  width: 100%;
  height: 480rpx;
  position: relative;
  margin-bottom: 20rpx;
}

.mytop_pos {
  width: 690rpx;
  height: 284rpx;
  background: #fff;
  border-radius: 20rpx;
  position: absolute;
  bottom: 0;
  left: 30rpx;
}
.usertype{
  background: #ff2d23;
  color: #fff;
  font-size: 24rpx;
  border-radius: 20rpx;
  padding: 10rpx 20rpx;
  line-height: 1
}
.headimg{
  /* border-image:  */
  border:10rpx solid #fff
}
.mytop_pos_head {
  position: relative;
  top: -80rpx;
  text-align: center;
  background-color:rgba(255,255,255, 0);

}
.mytop_icons{
  position: absolute;
  bottom: 20rpx;
}

.mytop_icon image{
  width: 48rpx;
  margin-bottom: 20rpx;
}
.mytop_icon{
  width: 25%;
  padding-bottom: 30rpx
}

.top_img{
  width: 100%;
  position: absolute;
  z-index: -100
}

.other_icons{
  width: 690rpx;
  background: #fff;
  border-radius: 20rpx;
  padding: 30rpx 30rpx 0;
  margin: 0 auto 20rpx
}

/* 订单 */
.mytorder_icon image{
  width: 64rpx;
  margin-bottom: 20rpx;
}
.mytorder_icons{
  width: 25%;
  padding-bottom: 30rpx
}


/* 工具  mytool_icon */
.mytool_icon image{
  width: 50rpx;
  margin-bottom: 20rpx;
}
.mytool_icon{
  width: 25%;
  padding-bottom: 30rpx
}

.signout_but{
  width: 690rpx;
  color: #ff2d23;
  font-size: 30rpx;
  margin-bottom: 20rpx;
  line-height: 1;
  padding: 30rpx;
  background: #fff;
  border-radius: 20rpx
}


.pb30{
  padding-bottom: 30rpx
}
.mt30{
  margin-top: 30rpx
}

/* 订单数量 */
.num{
  position: absolute;
  top: -12rpx;
  right: -12rpx;
  background: #F23030;
  border-radius: 50%;
  color: #fff;
  width: 30rpx;
  height: 30rpx;
  font-size: 20rpx;
}

.mytorder_icon{
  position: relative;
}


.warp{
  flex-wrap: wrap
}
.headCode{
  position: absolute;
  right: 20rpx;
  top: 90rpx;
  color: #000000;
  font-weight: 500

}