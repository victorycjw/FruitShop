@import "/utils/style/flexstyle.wxss";
@import "/utils/xmls/maskLayer/maskLayer.wxss";
@import "/utils/xmls/noneDataStyle/noneDataStyle.wxss";

page {
  font-size: 26rpx;
  /* letter-spacing: 2rpx; */
  background: #f5f5f5;
}

swiper {
  width: 100%;
  height: 360rpx;
}

.scroll_view {
  box-sizing: border-box;
  width: 100%;
  padding: 20rpx 0rpx;
  overflow-x: hidden;
  white-space: nowrap;
  background: #fff;
}

.scroll_view_item {
  display: inline-block;
  margin: 0 10rpx;
}

.vip {
  background: #fff;
  padding-bottom: 20rpx;
  padding-left: 20rpx
}

.vip_combo {
  width: 100%;
  height: 410rpx;
  background: linear-gradient(-45deg, #ff2d23 0%, #f70819 100%);
  position: relative;
  top: -4rpx;
  padding: 0 20rpx;
}

.vip_combo_right {
  height: 370rpx;
}

.vip_combo_a {
  position: relative;
}

.combo_tip {
  position: absolute;
  top: 0;
  left: 20rpx;
}

/* 热门商品 */

.hot {
  background: #fff;
  margin-bottom: 30rpx;
}

.hot_title {
  height: 96rpx;
}

.hot_list {
  padding: 0 10rpx;
  flex-wrap: wrap;
}

.hot_list_item_txt {
  height: 120rpx;
  width: 360rpx;
  padding: 20rpx 20rpx 30rpx;
  line-height: 1;
  margin-bottom: 10rpx;
}
.hot_list_item{
  position:relative;
}
.hot_list_item_book{
  width:147rpx;
  height:48rpx;
  background:#fe2922;
  border-radius:5rpx;
  text-align:center;
  line-height:48rpx;
  position:absolute;
  top:20rpx;
  right:20rpx;
  font-size:26rpx;
  color:#fff;
}
.hot_list_i_b{
  display:none;
}



.CouponView{
  position: fixed;
  top: 20%;
  left: 75rpx;
  width: 600rpx;
  height: 700rpx;
  /* background: #fff; */
  z-index: 9999
}
.coupon{
  width: 600rpx
}
.cancel{
  width: 33rpx;
  position: absolute;
  top: 30rpx;
  right: 40rpx
}
.couponBut{
  width: 540rpx;
  background: #fff;
  color: #f23030;
  position: absolute;
  bottom: 70rpx;
  left: 30rpx
}

.item20{
  padding-left: 20rpx;
  padding-right: 20rpx;
  padding-bottom: 20rpx
}

/* 拼团图片 */
.ptImg{
  width: 100%;
  border-radius: 10rpx
}


/* 消息通知 */
.noticView swiper{
  width: 100%;
  height: 56rpx;

}
.noticCon{
  width: 690rpx;
  padding: 30rpx
}

.h96{
  height: 96rpx
}
.item30{
  padding: 30rpx
}