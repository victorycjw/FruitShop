page {
  font-size: 28rpx;
  background: #f5f5f5;
  letter-spacing: 2rpx;
}

/* 申请列表样式 */

image {
  display: block;
}

/* 输入框 */

.apply {
  padding-bottom: 40rpx;
}

.apply_input {
  height: 96rpx;
  background: #fff;
  padding: 0 30rpx;
  border-bottom: 1rpx solid #ededed;
}

.apply_input input {
  text-align: right;
  font-size: 26rpx;
}

/* 上传身份证 */

.apply_upload {
  background: #fff;
  margin: 20rpx 0;
}

.apply_upload_title {
  height: 96rpx;
  padding: 0 30rpx;
}

.apply_upload_content {
  padding: 0 30rpx 36rpx;
}

.apply_upload_item {
  width: 330rpx;
  height: 250rpx;
  background: #f5f5f5;
  justify-content: flex-end;
}

.apply_upload_item>view {
  width: 100%;
  height: 50rpx;
  background: #6eba39;
  color: #fff;
}

/* 文本区域 */

.apply_textarea {
  background: #fff;
}

.apply_textarea_content {
  width: 100%;
  height: 284rpx;
  padding: 0 30rpx;
  margin-bottom: 40rpx;
}

.apply_textarea_content textarea {
  width: 100%;
  height: 240rpx;
  background: #f5f5f5;
  padding: 20rpx;
  box-sizing: border-box;
}

/* 提交按钮 */

.apply_submit {
  width: 690rpx;
  height: 88rpx;
  border-radius: 10rpx;
  background: #6eba39;
  color: #fff;
}

/* 选择区域 */
.apply_choose{
  width: 100%;
  margin: 20rpx 0;
}

.hover_btn {
  background: #67aa34;
  color: #E0E0E0;
}
