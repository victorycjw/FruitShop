/* 搜索框部分 */

.machine_search {
  background: #fff;
  height: 100rpx;
}

.index_search_view {
  width: 660rpx;
  height: 70rpx;
  border-radius: 35rpx;
  background: #f5f5f5;
}

.index_search_view input {
  width: 100%;
  margin-right: 30rpx;
}

.holder_class {
  color: #999;
  letter-spacing: 3rpx;
}

.index_search_view image {
  margin-left: 30rpx;
  margin-right: 20rpx;
}

/* 新的时间搜索框 */

.time_search {
  margin: 20rpx 0;
  height: 220rpx;
  padding: 0 30rpx;
  background: #fff;
}

.time_search_view_item {
  width: 320rpx;
  height: 70rpx;
  background: #f5f5f5;
  font-size: 26rpx;
  border-radius: 10rpx;
  padding: 0 20rpx;
}

.time_search_view_item input {
  text-align: center;
}

.center_line {
  width: 24rpx;
  height: 2rpx;
  background: #999;
}

.time_search_btn {
  width: 100%;
  height: 80rpx;
  border-radius: 10rpx;
  color: #fff;
  font-size: 30rpx;
  font-weight: 300;
  margin-top: 20rpx;
  background: #6eba39;
}

.holder_class {
  color: #999;
  letter-spacing: 2rpx;
}

.hover_search {
  background: #67aa34;
  color: #E0E0E0;
}

.index_search_view image {
  margin-left: 30rpx;
  margin-right: 20rpx;
}

button::after {
  border: 0;
}
