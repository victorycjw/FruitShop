/* 遮罩层 */
.commodity_screen{   
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.6;
  overflow: hidden;
  z-index: 1000;
  color: #fff;
}
/* 底部模态框弹出 */
.commodity_attr_box{   
  width: 100%;
  /* height: 300rpx; */
  overflow: auto;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 2000;
  background: #fff;
}