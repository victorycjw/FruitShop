view {
  box-sizing: border-box;
}

image {
  height: 100rpx;
  display: block;
  flex-shrink: 0;
}

.w100 {
  width: 100%;
}

.fs0 {
  flex-shrink: 0;
}

.allcenter, .ac {
  display: flex;
  justify-content: center;
  align-items: center;
}

.verticalcenter, .vc {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.verticalstart, .vs {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-start;
}

.verticalend, .ve {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-end;
}

.verticalbetween, .vb {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
}

.verticalbetweenauto, .vba {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.flex_column, .va{
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

.flex_start, .fs {
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.flex_end, .fe {
  display: flex;
  justify-content: flex-end;
  align-items: center;
}

.flex_between, .fb {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.flex_betweenauto, .fba {
  width: 100%;
  display: flex;
  justify-content: space-between;
}

.flex_around, .fa {
  width: 100%;
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.inline_block, .ib {
  display: inline-block;
}

