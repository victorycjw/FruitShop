/* 顶部分界线 */

.top_border {
  width: 100%;
  height: 1rpx;
  background: #ededed;
  position: fixed;
  top: 0;
}

.bottoview{
  line-height: 1.5;
  background-color:rgba(255,255,255, 0);
  color: #333
}
.bottoview::after{ border: none; }


.overflow, .of{
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  width: 100%
}

.textw{
  font-weight: 800
}

/* 遮罩层 */
.commodity_screen{   
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.6;
  overflow: hidden;
  z-index: 1000;
  color: #fff;
}
.td_line{
  text-decoration: line-through
}